{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "stripInternal": true,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "types": [
            "jasmine",
            "node"
        ]
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "demo",
        "node_modules"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true
    }
}